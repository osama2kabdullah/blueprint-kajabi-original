<style>
  {% if section.settings.bg_type == "image" %}
    #section-{{ section.id }} {
      background-image: url({{ section.settings.bg_image | image_picker_url: "background.jpg" }});
      background-position: {{ section.settings.bg_position }};
    }
  {% endif %}
  .blog-post-body {
    background-color: {{ section.settings.background_color }};
  }
  .blog-post-body .sizer {
    padding-top: {{ section.settings.padding_mobile.top | default: 40 | append: "px" }};
    padding-bottom: {{ section.settings.padding_mobile.bottom | default: 40 | append: "px" }};
  }
  .blog-post-body .container {
    max-width: calc(1260px + {{ section.settings.padding_mobile.right | default: 10 | append: "px" }} + {{ section.settings.padding_mobile.left | default: 10 | append: "px" }});
    padding-right: {{ section.settings.padding_mobile.right | default: 10 | append: "px" }};
    padding-left: {{ section.settings.padding_mobile.left | default: 10 | append: "px" }};
  }
  .blog-post-body__panel {
    background-color: {{ section.settings.blog_post_body_background_color }};
    border-color: {{ section.settings.blog_post_body_border_color }};
    border-radius: {{ section.settings.blog_post_body_border_radius | remove: "px" | append: "px" }};
    border-style: {{ section.settings.blog_post_body_border_type }};
    border-width: {{ section.settings.blog_post_body_border_width | remove: "px" | append: "px" }} ;
  }
  .blog-post-body__title {
    color: {{ section.settings.color_title_text }} !important;
  }
  .blog-post-body__date {
    color: {{ section.settings.color_date_text }};
  }
  .tag {
    color: {{ section.settings.color_tag_text }};
    background-color: {{ section.settings.color_tag_background }};
  }
  .tag:hover {
    color: {{ section.settings.color_tag_text }};
    background-color: {{ section.settings.color_tag_background }};
  }
  .blog-post-body__content {
    color: {{ section.settings.color_content_text }};
  }
  @media (min-width: 768px) {
    {% if section.settings.bg_type == "image" %}
      #section-{{ section.id }} {
        {% if section.settings.background_fixed %}
          background-attachment: fixed;
        {% endif %}
      }
    {% endif %}
    .blog-post-body .sizer {
      padding-top: {{ section.settings.padding_desktop.top | default: 40 | append: "px" }};
      padding-bottom: {{ section.settings.padding_desktop.bottom | default: 40 | append: "px" }};
    }
    .blog-post-body .container {
      max-width: calc(1260px + {{ section.settings.padding_desktop.right | default: 40 | append: "px" }} + {{ section.settings.padding_desktop.left | default: 40 | append: "px" }});
      padding-right: {{ section.settings.padding_desktop.right | default: 40 | append: "px" }};
      padding-left: {{ section.settings.padding_desktop.left | default: 40 | append: "px" }};
    }
  }
</style>

<section class="blog-post-body {% if section.settings.background_color != blank %}background-{{ section.settings.background_color | color_scheme_class }}{% endif %}" kjb-settings-id="{{ 'background_color' | settings_id: section: section }}">
  <div class="sizer">
    {% if section.settings.bg_type == "video" %}
      {% include "global_background_video" %}
    {% endif %}
    <div class="container">
      <div class="row">
        {% if section.settings.show_sidebar_desktop %}
          <div class="col-lg-9">
        {% else %}
          <div class="col-lg-12">
        {% endif %}
          {% if section.settings.blog_post_body_in_panel %}
            <div class="blog-post-body__panel box-shadow-{{ section.settings.blog_post_body_box_shadow }} {% if section.settings.blog_post_body_background_color != blank %}background-{{ section.settings.blog_post_body_background_color | color_scheme_class }}{% endif %}">
          {% endif %}
            {% unless section.settings.header_on_top %}
              {% include "blog_post_body_media" %}
            {% endunless %}
            <div class="blog-post-body__info">
              <h1 class="blog-post-body__title">{{ blog_post.title }}</h1>
              {% if section.settings.show_tags %}
                <span class="blog-post-body__tags" kjb-settings-id="{{ 'show_tags' | settings_id: section: section }}">
                  {% if blog_post.tags.size > 0 %}
                    {% for tag in blog_post.tags %}
                      <a class="tag" href="{{ current_site.url }}/blog?tag={{ tag | url_encode }}">{{ tag }}</a>
                    {% endfor %}
                  {% endif %}
                </span>
              {% endif %}
              {% if section.settings.show_date %}
                <span class="blog-post-body__date" kjb-settings-id="{{ 'show_date' | settings_id: section: section }}">{{ blog_post.created_at | date: "%b %d, 20%y" }}</span>
              {% endif %}
              {% if settings.show_comments and settings.short_code != "" %}
                <a class="blog-post-body__comment-count" href="{{ blog_post.url }}#disqus_thread" data-disqus-identifier="{{ blog_post.id }}"></a>
              {% endif %}
            </div>
            {% if section.settings.header_on_top %}
              {% include "blog_post_body_media" %}
            {% endif %}
            <div class="blog-post-body__content">
              {{ blog_post.content }}
            </div>
            {% if section.settings.show_cta %}
              {% include "blog_post_body_cta" %}
            {% endif %}
            {% if section.settings.show_opt_in %}
              {% include "blog_post_body_opt_in" %}
            {% endif %}
            {% include "disqus" %}
          {% if section.settings.blog_post_body_in_panel %}
            </div>
          {% endif %}
        </div>
        {% include "blog_sidebar" %}
      </div>
    </div>
  </div>
</section>

