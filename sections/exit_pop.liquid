<style>
  #exit-pop .modal__content {
    background: {{ section.settings.background_color }};
  }
  {% if section.settings.make_flush %}
    #exit-pop .modal__body, #exit-pop .modal__content {
      padding: 0;
    }
    #exit-pop .row {
      margin: 0;
    }
  {% endif %}
</style>


{% if section.settings.enable_modal or section.settings.modal_edit %}
  <div class="modal exit-pop" id="exit-pop" kjb-settings-id="{{ 'modal_edit' | settings_id: section: section }}" data-timed-reveal="{{ section.settings.popup_reveal }}" data-cookie-expire="{{ section.settings.frequency }}">
    <div class="modal__content background-{{ section.settings.background_color | color_scheme_class }}">
      <div class="close-x">
        <div class="close-x__part"></div>
        <div class="close-x__part"></div>
      </div>
      <div class="modal__body row text-{{ section.settings.body_text_align }} align-items-{{ section.settings.vertical }} justify-content-{{ section.settings.horizontal }}">
        {% for block in section.blocks %}
          {% case block.type %}
              {% when "text" %}
                {% include "block" type: block.type %}
              {% when "cta" %}
                {% include "block" type: block.type %}
              {% when "image" %}
                {% include "block" type: block.type %}
              {% when "video" %}
                {% include "block" type: block.type %}
              {% when "form" %}
                {% include "block" type: block.type %}
            {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% if editor %}
  {% if section.settings.modal_edit %}
    <script>
      var el = document.getElementById("exit-pop");
      el.classList.add("modal--open");
    </script>
  {% endif %}
{% endif %}

